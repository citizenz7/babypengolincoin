{% for section in sections %}
    {% if section.title == 'FAQ' %}
        <section class="page-section" id="faq">
            <div class="container">
                <!-- Contact Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">{{ section.title }}</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
                </div>
                <div class="row d-flex justify-content-center">
                    {# <h1 class="text-center my-4" id="faq">FAQ</h1> #}
                    <div class="col-lg-7 col-sm-12">
                        {{ section.contentMain|replace({'<div>': '', '</div>': '',})|raw }}
                    </div>
                </div>
                <div class="row mt-5 d-flex align-items-center">
                    <div class="col">
                        <img src="{{ asset('assets/img/meme1_bpgo.jpg') }}" alt="bpgo" class="img-fluid d-block mx-auto" style="max-width: 400px; width: 100%;">
                    </div>
                    <div class="col">
                        <img src="{{ asset('assets/img/meme2_bpgo.jpg') }}" alt="bpgo" class="img-fluid d-block mx-auto" style="max-width: 400px; width: 100%;">
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endfor %}
