{% for section in sections %}
    {% if section.title == 'Charity' %}
        <section class="page-section" id="charity">
            <div class="container">
            <!-- Charity Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">{{ section.title }}</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
                <div class="row">
                    {# <h1 class="text-center my-4" id="charity">Charity</h1> #}
                    <div class="col text-center">
                        {{ section.contentMain|replace({'<div>': '', '</div>': '',})|raw }}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endfor %}